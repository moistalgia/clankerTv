# Example Environment Variables for ClankerTV
# Copy this to .env and fill in your actual values
# DO NOT commit the .env file to git!

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
GUILD_ID=your_discord_guild_id_here
ANNOUNCE_CHANNEL_ID=clanker-commands
STREAM_CHANNEL_ID=your_voice_channel_id_here
NOTIFY_USER_ID=your_user_id_for_notifications_here

# Plex Configuration
PLEX_URL=http://localhost:32400
PLEX_TOKEN=your_plex_token_here
PLEX_CLIENT_NAME=Plex (Windows)
PLEX_LIBRARY=Movies

# qBittorrent Configuration
QB_HOST=localhost:8080
QB_USER=admin
QB_PASS=your_qbittorrent_password_here
DOWNLOAD_PATH=P:\Movies

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here